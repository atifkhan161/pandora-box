{
  "name": "pandora-box",
  "version": "1.0.0",
  "description": "Self-hosted Progressive Web Application for unified media management",
  "main": "index.js",
  "scripts": {
    "dev": "concurrently \"npm run dev:server\" \"npm run dev:client\"",
    "dev:server": "cd server && npm run dev",
    "dev:client": "cd client && npm run dev",
    "build": "npm run build:server && npm run build:client",
    "build:server": "cd server && npm run build",
    "build:client": "cd client && npm run build",
    "start": "cd server && npm start",
    "test": "npm run test:server && npm run test:client",
    "test:server": "cd server && npm test",
    "test:client": "cd client && npm test",
    "lint": "npm run lint:server && npm run lint:client",
    "lint:server": "cd server && npm run lint",
    "lint:client": "cd client && npm run lint",
    "docker:build": "docker build -t pandora-box:latest .",
    "docker:run": "docker-compose up -d",
    "docker:dev": "docker-compose -f docker-compose.dev.yml up -d",
    "clean": "npm run clean:server && npm run clean:client",
    "clean:server": "cd server && npm run clean",
    "clean:client": "cd client && npm run clean",
    "install:all": "npm install && cd server && npm install && cd ../client && npm install"
  },
  "keywords": [
    "pwa",
    "media",
    "management",
    "self-hosted",
    "docker",
    "jellyfin",
    "torrent"
  ],
  "author": "Pandora Box Team",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/pandora-box/pandora-box.git"
  },
  "bugs": {
    "url": "https://github.com/pandora-box/pandora-box/issues"
  },
  "homepage": "https://github.com/pandora-box/pandora-box#readme"
}