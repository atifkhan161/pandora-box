# Pandora Box Environment Configuration

# Server Configuration
PORT=8080
NODE_ENV=development
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRY=24h
JWT_REFRESH_EXPIRY=90d

# Database Configuration
DB_PATH=./data/pandora.db
DB_AUTO_SAVE=true
DB_AUTO_SAVE_INTERVAL=5000

# API Keys (External Services)
TMDB_API_KEY=your-tmdb-api-key
WATCHMODE_API_KEY=your-watchmode-api-key

# Service URLs
JACKETT_URL=http://localhost:9117
JACKETT_API_KEY=your-jackett-api-key

QBITTORRENT_URL=http://localhost:8080
QBITTORRENT_USERNAME=admin
QBITTORRENT_PASSWORD=adminpass

CLOUD_COMMANDER_URL=http://localhost:8000
CLOUD_COMMANDER_USERNAME=admin
CLOUD_COMMANDER_PASSWORD=admin

PORTAINER_URL=http://localhost:9000
PORTAINER_API_KEY=your-portainer-api-key

JELLYFIN_URL=http://localhost:8096
JELLYFIN_API_KEY=your-jellyfin-api-key

# File Paths
DOWNLOADS_PATH=/mnt/samba/Downloads
MOVIES_PATH=/mnt/samba/Movies
TV_SHOWS_PATH=/mnt/samba/TV Shows

# Security
BCRYPT_ROUNDS=12
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX=100

# Logging
LOG_LEVEL=info
LOG_FILE=./logs/pandora.log

# WebSocket
WS_PORT=8081
WS_HEARTBEAT_INTERVAL=30000

# Cache Configuration
CACHE_TTL_TRENDING=21600
CACHE_TTL_SEARCH=3600
CACHE_TTL_DETAILS=86400
CACHE_TTL_AVAILABILITY=86400

# Notification Settings
ENABLE_NOTIFICATIONS=true
NOTIFICATION_SOUND=true